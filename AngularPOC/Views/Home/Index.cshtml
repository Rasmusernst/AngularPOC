<div ng-app="app">
    <div ng-controller="BooksController" class="container">
        <div class="row">
            <div class="col-md-12">

                <h1>Erhmagerd! BERKS!</h1>

                <br/>
                @* ADD *@
                <h2>Add BERK</h2>
                <form name="addBook">
                    <div class="form-group">
                        <label for="cname" class="col-sm-12 control-label">Book Title:</label>
                        <div class="col-sm-12">
                            <input type="text" class="form-control" id="cname" placeholder="Title of book" ng-model="newbook.BookName" required />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-12">
                            <input type="submit" value="Add" ng-click="add()" class="btn btn-primary" />
                        </div>
                    </div>
                </form>
            </div>

            <br />
            @* List + update & delete *@
            <div class="col-md-12">
                <h2>List of BERKS</h2>
                <div class="table-responsive">
                    <table class="table table-bordered table-hover">
                        <tr>
                            <th>#</th>
                            <td>Title</td>
                            <td>Edit</td>
                            <td>Delete</td>
                        </tr>
                        <tr ng-repeat="book in books">
                            <td><strong> {{ book.Id }}</strong></td>
                            <td>
                                <p>{{ book.BookName }}</p>
                            </td>
                            <td>
                                <input type="text" ng-model="book.BookName" />
                                <a ng-click="save(book)" href="javascript:;">Save</a>
                            </td>
                            <td>
                                <a ng-click="deleteBook(book)" href="javascript:;">Delete</a>
                            </td>
                        </tr>
                    </table>
                    <hr />
                </div>
            </div>
        </div>
    </div>
</div>
